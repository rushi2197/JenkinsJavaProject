pipeline {
    agent any

    parameters {
        string(name: 'REPO_URL_Java', defaultValue: 'https://github.com/rushi2197/myCodes_Practice.git', description: 'Git repository URL')
        string(name: 'BRANCH_NAME_Java', defaultValue: 'master', description: 'Branch to checkout')
        string(name: 'codePath', defaultValue: 'Aug_2025/BasicJavaCodes', description: 'Path with basic Java codes')
        string(name: 'codeName', defaultValue: 'CheckIfPalindrome', description: 'Basic default code name')
        string(name: 'NUMBER', defaultValue: '10', description: 'Number to pass to Java program')
        string(name: 'REPO_URL_Jmeter', defaultValue: 'https://github.com/rushi2197/JmeterProject.git', description: 'JMeter Git repository URL')
        string(name: 'BRANCH_NAME_Jmeter', defaultValue: 'main', description: 'Branch to checkout')
        string(name: 'JmeterScriptName', defaultValue: 'JmeterTest_DummyScript.jmx', description: 'JMeter test script to run')
    }

    stages {
        stage('Checkout Repos') {
            steps {
                script {
                    // Define checkout function inline
                    def checkoutRepo = { repoUrl, branch, dir = '' ->
                        if (dir?.trim()) {
                            dir(dir) {
                                git branch: branch, url: repoUrl
                            }
                        } else {
                            git branch: branch, url: repoUrl
                        }
                    }

                    // Checkout Java repo at workspace root under 'JavaProject' folder
                    checkoutRepo(params.REPO_URL_Java, params.BRANCH_NAME_Java, 'JavaProject')

                    // Checkout JMeter repo under 'JmeterProject' folder
                    checkoutRepo(params.REPO_URL_Jmeter, params.BRANCH_NAME_Jmeter, 'JmeterProject')
                }
            }
        }

        stage('Unzip JMeter') {
            steps {
                sh """
                    cd ${WORKSPACE}
                    unzip -o apache-jmeter-5.5.zip
                """
            }
        }

        stage('Run Java Code & JMeter') {
            steps {
                script {
                    // Define compileAndRun function inline
                    def compileAndRun = { codePath, codeName, number ->
                        sh """
                            cd ${WORKSPACE}/JavaProject/src
                            javac ${codePath}/${codeName}.java
                            java ${codePath.replaceAll('/', '.')}.$codeName $number
                        """
                    }

                    // Run Java compile & execution
                    compileAndRun(params.codePath, params.codeName, params.NUMBER)

                    // Run JMeter test in background (nohup)
                    sh """
                        nohup ${WORKSPACE}/apache-jmeter-5.5/bin/jmeter -n -t ${WORKSPACE}/JmeterProject/${params.JmeterScriptName} -l ${WORKSPACE}/Results/Testrun1.csv -j ${WORKSPACE}/Results/Testrun1.log &
                    """
                }
            }
        }
    }
}
